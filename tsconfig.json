{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "views": ["views"],
      "views/*": ["views/*"],
      "components": ["components"],
      "components/*": ["components/*"],
      "routes": ["routes"],
      "routes/*": ["routes/*"],
      "models": ["models"],
      "models/*": ["models/*"],
      "assets": ["assets"],
      "assets/*": ["assets/*"],
      "utils": ["utils"],
      "utils/*": ["utils/*"],
      "types": ["types"],
      "types/*": ["types/*"]
    }
  },
  "include": ["src"]
}
